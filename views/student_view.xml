<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="student_form_view" model="ir.ui.view">
        <field name="name">Students</field>
        <field name="model">student.management</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="email" />
                        <field name="roll_no" />
                        <field name="department" />
                        <field name="course_ids" />
                    </group>

                    <button name="action_show_courses"
                        string="Show Enrolled Courses"
                        type="object"
                        class="btn-primary" />

                </sheet>
            </form>
        </field>
    </record>

    <record id="student_list_view" model="ir.ui.view">
        <field name="name">All Students</field>
        <field name="model">student.management</field>
        <field name="arch" type="xml">
            <list string="All Students">
                <field name="name" />
                <field name="email" />
                <field name="roll_no" />
                <field name="department" />
            </list>
        </field>
    </record>

    <record id="student_action_view" model="ir.actions.act_window">
        <field name="name">Student Action</field>
        <field name="res_model">student.management</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>
                Please enter your student info.
            </p>
        </field>
    </record>

</odoo>